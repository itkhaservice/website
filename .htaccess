<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /khaservi_khaserv/

    # Chặn truy cập trực tiếp vào các file hệ thống
    RewriteRule ^\.htaccess$ - [F]

    # Giới thiệu
    RewriteRule ^gioi-thieu.html$ index.php?com=gioi-thieu [L]
    RewriteRule ^gioi-thieu/([^/]+).html$ index.php?com=gioi-thieu&id=$1 [L]

    # Lĩnh vực hoạt động
    RewriteRule ^linh-vuc-hoat-dong.html$ index.php?com=linh-vuc-hoat-dong [L]
    RewriteRule ^linh-vuc-hoat-dong/([^/]+).html$ index.php?com=linh-vuc-hoat-dong&type=$1 [L]
    RewriteRule ^dich-vu/([^/]+).html$ index.php?com=linh-vuc-hoat-dong&id=$1 [L]

    # Dự án
    RewriteRule ^du-an.html$ index.php?com=du-an [L]
    RewriteRule ^du-an/([^/]+).html$ index.php?com=du-an&id=$1 [L]

    # Tin tức
    RewriteRule ^tin-tuc.html$ index.php?com=tin-tuc [L]
    RewriteRule ^tin-tuc/([^/]+).html$ index.php?com=tin-tuc&type=$1 [L]
    RewriteRule ^tin-tuc/chi-tiet/([^/]+).html$ index.php?com=tin-tuc&id=$1 [L]

    # Tuyển dụng
    RewriteRule ^tuyen-dung.html$ index.php?com=tuyen-dung [L]
    RewriteRule ^tuyen-dung/([^/]+).html$ index.php?com=tuyen-dung&id=$1 [L]

    # Thư viện ảnh
    RewriteRule ^thu-vien-anh.html$ index.php?com=thu-vien-anh [L]
    RewriteRule ^thu-vien-anh/([^/]+).html$ index.php?com=thu-vien-anh&id=$1 [L]

    # Liên hệ
    RewriteRule ^lien-he.html$ index.php?com=lien-he [L]

    # Tổng quát cho các trang khác nếu có pattern chung
    # RewriteCond %{REQUEST_FILENAME} !-f
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteRule ^([^/]+).html$ index.php?com=$1 [L]

</IfModule>